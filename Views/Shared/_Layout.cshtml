<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Sản phẩm Châu Phú</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Glassmorphism Navbar HTML CSS | Codehal</title>
    
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,100;1,200;1,300;1,400;1,500;1,600;1,700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Source+Serif+Pro:ital,wght@0,200;0,300;0,400;0,600;0,700;1,200;1,300;1,400;1,600;1,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
    <link rel="shortcut icon" type="image/png" href="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRed5cx1q7tOln6BBN3MkCSPz4_BvoGkT8C40a0oYCHsA&s" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/lib/icofont/icofont.min.css" />
    <link rel="stylesheet" href="~/lib/select2/css/select2.min.css" />
    <link rel="stylesheet" href="~/lib/select2-bootstrap-5-theme/select2-bootstrap-5-theme.min.css" />
    <link rel="stylesheet" href="~/lib/boxicons/css/boxicons.min.css" />
    <link rel="stylesheet" href="style.css">

    @await RenderSectionAsync("Styles", required: false)

</head>

<body>

    <header id="header">
        <div class="container">
            <div class="d-flex align-items-center py-2">
                <div class="logo me-auto">
                    <a class="d-flex align-items-center" href="/">
                        <img src="./img/logo.png" alt="logo" />
                        <span class="ms-2 text-uppercase">Sản phẩm Châu Phú</span>
                    </a>

                </div>
                @* @await Component.InvokeAsync("HomeMenu") *@
                <div class="user-tools d-none d-xl-flex align-items-center">
                    <a href="/wishlist" class="btn">
                        <i class="icofont-heart"></i> Yêu thích
                        <span id="wishlist-badge" class="badge bg-danger"></span>
                    </a>
                    <a href="/shopping/cart" class="btn">
                        <i class="icofont-cart"></i> Giỏ hàng
                        <span id="cart-badge" class="badge bg-danger"></span>
                    </a>
                    <div class="dropdown">
                        <button class="btn" type="button" id="btn-context" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bx bx-dots-vertical-rounded" style="line-height: 1.5"></i>
                        </button>
                        <ul class="dropdown-menu" aria-labelledby="btn-context">
                            <li><a href="/order/my-request" class="dropdown-item">My order request</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="background-primary menu-container">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <nav class="nav-menu d-none d-xl-block">
                        <ul>
                            <li class="active">
                                <a href="/home">Trang chủ</a>
                            </li>
                            <li>
                                <a href="/home">Giới thiệu</a>
                            </li>
                            <li class="drop-down">
                                <a href="/category?s=nail-art">Tin tức</a>
                                <ul>
                                    <li><a href="">Về Sản Phẩm - Làng Nghề</a></li>
                                    <li><a href="">Về Du Lịch</a></li>
                                    <li><a href="">Về Các Chính Sách Hỗ Trợ Văn Bản</a></li>
                                    <li><a href="">Thông Tin Cần Biết Khác</a></li>
                                </ul>
                            </li>
                            <li class="drop-down">
                                <a href="/category?s=nail-art">Sản Phẩm</a>
                                <ul>
                                    <li><a href="">Thực Phẩm</a></li>
                                    <li><a href="">Tiểu Thủ Công Nghiệp</a></li>
                                    <li><a href="">Nông Sản</a></li>
                                </ul>
                            </li>
                            <li><a href="/category?s=gel-polish">Video Giới Thiệu</a></li>
                            <li><a href="">Liên hệ</a></li>
                        </ul>
                    </nav>
                    <form class="bs-form-custom" method="get" action="/home">
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Tìm kiếm ở đây" name="k" value="">
                            <button class="btn btn-search" type="submit"><i class="icofont-search-1"></i></button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </header>

    <main role="main" class="mh-500">
        @RenderBody()
    </main>

    <footer class="footer bg-light pt-4">
