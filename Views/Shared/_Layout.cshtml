        <div class="footer-bottom">
            <p class="fw-bold background-primary text-center text-white py-2 mb-0">© Bản quyền thuộc UBND huyện Châu Phú tỉnh An Giang</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/select2/js/select2.full.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script type="text/javascript">
        $(document).ready(() => {
            // Initialize Select2 Theme
            $('.select2bs5').select2({
                theme: 'bootstrap-5'
            });

            // Add red star for label that form element is required
            $('form [required]').prev('label').append(' <span class="text-danger">*</span>');
        });
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>